<h1>New Service</h1>

<%- @service.errors.messages.each do |field, errors| %>
  <p>Erro no campo <%= field %></p>
  <ul>
    <%- errors.each do |message| %>
      <li><%= message %>
    <%- end %>
  </ul>
<%- end %>

<%= form_for @service do |f| %>
  Nome:<br>
  <%= f.text_field :name %><br><br>

  Preço:<br>
  <%= f.text_field :price %><br><br>

  Duração:<br>
  <%= f.text_field :duration %><br><br>

  Descrição:<br>
  <%= f.text_area :description %><br><br>

  <%= f.submit 'Criar' %>
<%- end %>
